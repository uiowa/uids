{% block banner_wrapper_start %}
	<div class="banner {{ banner_classes }}">
	{% endblock %}

	{% block banner_image %}
		{% if banner_image %}
			<div class="banner__image">
				{% render "@image" %}
			</div>
		{% endif %}
	{% endblock %}

	<div class="banner__container">
		<div class="banner__content">
			{% block heading %}
				{% if banner_title is not empty %}
					{% include '@headline' with {
          'headline_level' : 'h3',
          'headline_class' : 'bold-headline--serif bold-headline',
          'headline_text' : banner_title,
        } %}
				{% endif %}
			{% endblock %}

			{% if banner_summary is not empty %}
				<p class="banner__summary">{{ banner_summary }}</p>
			{% endif %}
			{% if banner_link_url is not empty %}
				<a href="{{ banner_link_url }}" class="{{ bttn_class }}">{{ banner_link_title }}
					<i class="fas fa-arrow-right"></i>
				</a>
			{% endif %}
		</div>
	</div>
</div>
