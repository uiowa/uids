{% embed '@iowa-bar--parent_site_name' %}

  {% block top_links %}
    {% render '@top' %}
  {% endblock %}

{% endembed %}

<div class="section">
<div class="section__snap">

{% include "@hero--default" with {
  "hero_type": 'image',
  "hero_size": 'large',
  "hero_vertical_alignment": 'hero--vertical-center',
  "hero_horizontal_alignment": 'hero--horizontal-center',
  "hero_title": 'Be a Hawkeye',
  "hero_text": '<p>Iowa is where great stories begin. Its time to start yours. Find out how.</p>',
  "hero_title_classes": 'bold-headline--caps bold-headline bold-headline--highlight',
  "hero_classes": 'bg--black',
  "hero_overlay": 'solid-opacity',
} %}



</div>{# end section #}


<div role="region" class="cta-row__wrapper">
	<div class="cta-row__container">
		{% include "@menu" with {
				items: link_bttn.items | slice(0, 4),
			} %}

	</div>
</div>



<div class="section__snap">
{% render '@aerial' %}
</div>
{# end section #}


<div class="section__snap">

<div class="areas">
<div class="areas__column areas__content">
{% include "@headline" with {
              "heading_level" : 'h2',
              "heading_class" : 'bold-headline--caps bold-headline',
              "heading" : '200 + Areas of Study'
            } %}

<p>Iowa offers over 200 majors, minors and certificates. Students are encouraged to work across disciplines to find their passion</p>

<a href="https://ADMISSIONS.UIOWA.EDU/ACADEMICS" class="bttn bttn--secondary bttn--caps">

	ADMISSIONS.UIOWA.EDU/ACADEMICS
	<i class="fas fa-arrow-right"></i>
</a>


</div>

   <div class="areas__column">
<div class="card__wrapper">
	{% for item in row.items | slice(0, 9) %}
		{% set card_classes = item.card_classes ?: '' %}
		{% set card_classes = card_classes|split(' ')|merge(['card__row'])|join(' ') %}
		{% include '@card' with {
      'card_classes': card_classes,
      'card_image': item.card_image,
      'card_link_url': item.card_link_url,
      'card_link_title': item.card_link_title,
      'card_title': item.card_title,
      'card_text': item.card_text,
      'card_author': item.card_author,
      'card_aria': item.card_aria
    } %}
	{% endfor %}
</div>

</div>
</div>






</div>
{# end section #}


