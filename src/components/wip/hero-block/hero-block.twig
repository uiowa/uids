{% block hero_wrapper_start %}
  <div class="hero hero__{{ hero_content }}">

    {% if hero_type == 'video' %}

      {% if hero_video %}
        <video class="hero__video" autoplay="autoplay" muted="muted" loop="loop" id="video-container" poster="{{ hero_image }}">
          <source src="{{ hero_video }}" type="video/mp4">
        </video>
        <!-- This picture should assume background overlay doesn't work. So it should be darker to handle contrast ratio issues. -->
        <!--[if lt IE 9]> <img src="{{ hero_image }}" alt="{{ hero_image_alt }}" class=" ie8-poster"> <![endif]-->
      </video>
    {% endif %}

  {% else %}
    <div class="hero__image">
{% include "@bg-images" %}
    </div>
  {% endif %}

{% endblock %}

{% if not (hero_content == 'grid') %}
<div class="hero__container hero__container-{{ hero_content }}">
{% endif %}

  <div class="hero__content hero__content-{{ hero_content }}">

{% if hero_content == 'grid' %}


    {% block headline %}
      {% if hero_title is not empty %}
        {% include '@headline' with {
              'headline_level' : 'h2',
              'headline_class' : 'bold-headline--caps bold-headline',
              'headline_text' : hero_title,
            } %}
      {% endif %}
    {% endblock %}

<div class="hero-content">
<p>Big Ten athletics. A world-class hospital. Renowned artists. Exciting things come together in Iowa City, with Iowa's campus at the center of it all.
<a href="https://www.example.com" class="bttn bttn--primary bttn--caps">
	About Iowa City
	<i class="fas fa-arrow-right"></i>
</a>
</p>


</div>


{% else %}

{% if hero_content == 'bottom' %}
	{% block breadcrumbs %}
		{% include '@breadcrumbs' %}
	{% endblock %}
{% endif %}


{% block headline %}
	{% if hero_title is not empty %}
		{% include '@headline' with {
              'headline_level' : 'h2',
              'headline_class' : 'bold-headline--serif bold-headline',
              'headline_text' : hero_title,
            } %}
	{% endif %}
{% endblock %}


{% endif %}



    {% if hero_content == 'center' %}
      <div class="hero__links">
        {% for item in cta.items %}
          <a href="{{item.link}}" class="{{ item.type }}">{{ item.text }}</a>
        {% endfor %}
      </div>
    {% endif %}

  </div>

  {% if hero_type == 'video' %}
    <div class="video-controls video">
      <button class="video-btn video-btn__pause" id="video-btn">
        <span class="element-invisible">Pause</span>
      </button>
    </div>
  {% endif %}

{% if not (hero_content == 'grid') %}
</div>
{% endif %}

</div>
