{% embed '@background' %}
  {% block content %}
    {% for headline in headlines %}
      {% for size in ['h1', 'h2', 'h3', 'h4', 'h5', 'h6'] %}
        {% set example_headline = {
          'headline_level': size,
          'headline_class': headline.headline_class,
          'headline_text': size ~ ': ' ~ headline.headline_text,
        } %}
        {% include '@headline--default' with example_headline only %}
      {% endfor %}
    {% endfor %}
  {% endblock %}
{% endembed %}
