<div class="stat__grid {{ stat_classes }}">
  {% block heading %}
    <div>
      {% if stat_title is not empty %}
        {% include '@headline' with {
          'headline_level' : 'h2',
          'headline_class' : 'stat__title',
          'headline_text' : stat_title,
          'headline_prefix' : stat_prefix,
          'headline_suffix' : stat_suffix,
        } %}
      {% endif %}
    </div>
  {% endblock %}
  {% if stat_summary is not empty %}
    <p class="stat__description">{{ stat_summary }}</p>
  {% endif %}
    {% if stat_content is not empty %}
    <p class="stat__content">{{ stat_content }}</p>
  {% endif %}
</div>

<style>
  .stat__grid.stat--horizontal {
    padding: 3rem;
  }
</style>
