<nav id="vertical-dots" role="navigation" aria-label="Navigation">
  <ul>
    {% set section_no = 1 %}
    {% for section in sections %}
      <li>
        <a class="v-dot-link" href="#{{section.section_id}}" aria-labelledby="v-dot-nav-section-{{ section_no }}" data-section={{section.section_id}}>
          <span id="v-dot-nav-section-{{ section_no }}">{{section.section_title}}</span>
          {% if section_no == 1 %}
            <i class="fas fa-arrow-up"></i>
          {% endif %}
        </a>
      </li>
      {% set section_no = section_no +1 %}
    {% endfor %}
  </ul>
</nav>