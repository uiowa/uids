{% if tablist_id is empty %}
  {% set tablist_id = 0 %}
{% endif %}
<div class="tabs" id="tabs--{{ tablist_id }}">
  <div role="tablist" aria-label="Entertainment">
    {% for tab_item_number, item in items %}
      <button role="tab"
              aria-selected="{{ (tab_item_number == 0) ? 'true' : 'false' }}"
              aria-controls="tabs--{{ tablist_id }}__panel--{{ tab_item_number }}"
              id="tabs--{{ tablist_id }}__tab--{{ tab_item_number }}"
              {{ (tab_item_number == 0) ? '': 'tabindex="-1"' }}
      >
        {{ item.title }}
      </button>
    {% endfor %}
  </div>

  {% for panel_item_number, item in items %}
    <div tabindex="0"
         role="tabpanel"
         id="tabs--{{ tablist_id }}__panel--{{ panel_item_number }}"
         aria-labelledby="tabs--{{ tablist_id }}__tab--{{ panel_item_number }}"
         {{ panel_item_number == 0 ? '' : 'hidden' }}
    >
      {{ item.content }}
    </div>
  {% endfor %}
</div>
