<div tabindex="0" class="slider__slide" {% if slide.slide_expanded %} aria-expanded="true" {% endif %}>

  {% embed '@banner' with {
    'banner_image' : slide.slide_banner_image,
    'banner_link_url' : slide.slide_link,
    'banner_title' : slide.slide_title,
    'banner_summary' : slide.slide_sub,
    'banner_link_url' : slide.slide_sub,
    'bttn_class' : slide.slide_link_class,
    'banner_link_title' : slide.slide_link_title,
    'banner_classes' : slide.slide_banner_class
  } %}

    {% block banner_image %}
      {% if banner_image %}
        <div class="banner__image">
          <img src="{{ slide.slide_banner_image }}">
        </div>
      {% endif %}
    {% endblock %}

  {% endembed %}

  <div class="slider__teaser">
    <p class="slider__teaser-heading">{{ slide.slide_title }}
      <span aria-hidden="true" class="fas fa-plus"></span>
    </p>
  </div>

</div>
