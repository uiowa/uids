<{{ headline_level }} class="headline {{ headline_class }}">
  {% if headline_url %}
<a href="{{ headline_url }}"{% if headline_aria %} aria-describedby="{{ headline_aria }}"{% endif %}{% if headline_url_class %} class="{{ headline_url_class }}"{% endif %}>
  {% endif %}
  {% if headline_prefix %}
    <span class="headline__prefix">{{ headline_prefix }}</span>
  {% endif %}
    <span class="headline__text">{{ headline_text }}</span>
  {% if headline_suffix %}
    <span class="headline__suffix">{{ headline_suffix }}</span>
  {% endif %}
  {% if headline_url %}
    </a>
  {% endif %}
</{{ headline_level }}>
